}

.secondSection {
    background-color: rgb(245, 242, 149);
    width: 50%;
    text-align: center;
    color: rgb(7, 74, 197);
    font-size: 3rem;
    height: 4rem;
}


.hikingOne {
   background-image: url('https://img.theculturetrip.com/1440x/smart/wp-content/uploads/2018/04/praia_do_sancho_fernando_de_noronha.jpg');
